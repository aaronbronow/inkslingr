<header>
	<div class="grid-container">
		<div class="grid-80">
			<h2>Hello World</h2>
		</div>
		<div class="grid-20">
			<% if is_authorized_user() %>
				<span> 
					<a id="userbadge" href="auth/sign-out" title="Sign out">
						<%= @twitter.screen_name %>
						<img src="<%= @twitter.profile_image_url %>" />
					</a>
				</span>
			<% end %>
		</div>
	</div>
</header>

<div class="jumbotron">
	<div class="container">
    <div class="row">
  	  <div class="col-md-6">
