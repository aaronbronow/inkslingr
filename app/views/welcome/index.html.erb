<header>
	<div class="grid-container">
		<div class="grid-80">
			<h2>Hello World</h2>
		</div>
		<div class="grid-20">
			<% if is_returning_twitter_user() %>
				<span><%= @message %> 
					<a id="userbadge" href="auth/sign-out" title="Sign out">
						<%= @member.screen_name %>
						<img src="<%= @member.profile_image_url %>" />
					</a>
				</span>
			<% end %>
		</div>
	</div>
</header>

<div class="hero-bg">
	<div class="hero grid-container">
	    <div class="grid-50">
			<% unless is_returning_twitter_user() %>
	        <div class="content">
				<img src="http://farm3.staticflickr.com/2170/1781295679_9a92211e24.jpg">
			</div>
			<% else %>
			<div class="content">
				<img src="http://farm4.staticflickr.com/3285/2931121522_eac0c5d678.jpg">
			</div>
			<% end %>
	    </div>
	    <div class="grid-50">
	        <div class="content right-side">
				<% unless is_returning_twitter_user() %>
					<a href="auth/sign-in-with-twitter" id="sign-in-with-twitter"><img src="https://dev.twitter.com/sites/default/files/images_documentation/sign-in-with-twitter-gray.png"/>
					</a>
				<% else %>
					<a href="auth/sign-in-with-goodreads" id="sign-in-with-goodreads">
					<img src="https://djgho45yw78yg.cloudfront.net/assets/badge/goodreads-login-button-e4993e896d7653e58afbc8bc089b140a.png"/>
					</a>
				<% end %>
				
			</div>
	    </div>
	</div>
</div>

